.words
  margin-bottom 30px

.title-simple_words
  margin-bottom 13px

.descr-simple_words
  margin-bottom 20px

.words__textarea
  width 100%
  min-height 200px
  position relative
  z-index 20
  border none
  background-color transparent
  background-image url(../../images/about-line.png)
  background-position center 25px
  background-repeat repeat-y
  line-height 60px
  font-size 30px
  color grey1
  courier()

.words__textarea-wrap
  position relative

.words__textarea-placeholder
  position absolute
  top 4px
  left 0
  width 100%
  height 100%
  z-index 10
  opacity 1
  transition .1s ease
  line-height 60px
  font-size 30px
  color grey1
  courier()
  padding-left 3px

.words__textarea:focus ~ .words__textarea-placeholder,
.words__textarea:not([value='']) ~ .words__textarea-placeholder
  content ''
  opacity 0
